            <form action="#" id="btn-cart">
                <button type="submit" class="btn btn-light btn-md mr-1 mb-2 waves-effect waves-light"><i
                    class="fas fa-shopping-cart pr-2"></i>Add to
                cart</button>
            </form>
            
        </div>

{{!-- product category --}}
<section>
  <h4 class="text-center my-5"><strong>Categories</strong></h4>

  <div class="row">
    {{#each categories_ltds}}
    <div class="col-md-6 col-lg-3 mb-4">
      <div class="">
        <div class="view zoom brighten z-depth-2 rounded">
          <a href="/search/{{this.id}}" class="text-white">
          <img class="img-fluid" src="uploads/{{this.image}}"
            {{!-- <img class="img-fluid" src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/new/img(1).jpg" --}}
            alt="{{this.title}}">

          <div class="mask card-mask-color waves-effect waves-light">
            <div class="d-flex align-items-end h-100 ">
              <h5 class="mb-0 p-3" style="position: absolute">{{this.title}}</h5>
            </div>
          </div>
          </a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

</section>

{{!-- best seller --}}
<section>
  <h4 class="text-center mt-4 mb-5"><strong>Bestsellers</strong></h4>

  <div class="row">
    {{#each products_bs}}
    <div class="col-md-3 mb-5">
      <div class="card">

        <div class="view zoom overlay">
          {{!-- <h4 class="mb-0"><span class="badge badge-dark badge-pill badge-news">Sold out</span></h4> --}}
          {{#if this.bestseller}}
          <h4 class="mb-0"><span class="badge badge-primary badge-pill badge-news ml-2 mt-2"
              style="position: absolute;">Best Seller</span></h4>
          {{/if}}
          <a href="/product/{{this.id}}">
            <div class="mask waves-effect waves-light">
              <img class="img-fluid w-100" src="uploads/{{this.image}}">
              {{!-- <img class="img-fluid w-100" src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/13.jpg"> --}}
              <div class="mask rgba-black-slight waves-effect waves-light"></div>
            </div>
          </a>
        </div>

        <div class="card-body text-center pt-4">

          <h5>{{this.name}}</h5>
          <p class="mb-2 text-muted text-uppercase small"></p>
          <ul class="rating pl-0" style="display: inline-flex; list-style: none;">
            <li>
              <i class="fas fa-star fa-sm text-primary"></i>
            </li>
            <li>
              <i class="fas fa-star fa-sm text-primary"></i>
            </li>
            <li>
              <i class="fas fa-star fa-sm text-primary"></i>
            </li>
            <li>
              <i class="fas fa-star fa-sm text-primary"></i>
            </li>
            <li>
              <i class="far fa-star fa-sm text-primary"></i>
            </li>
          </ul>
          <hr>
          <p><span class="mr-1"><strong>${{this.price}}</strong></span></p>
          <button type="button" class="btn btn-primary btn-sm mr-1 mb-2 waves-effect waves-light"><i
              class="fas fa-shopping-cart pr-2"></i>Add to cart</button>
          <button type="button" class="btn btn-light btn-sm mr-1 mb-2 waves-effect waves-light"><i
              class="fas fa-info-circle pr-2"></i>Details</button>
          <button type="button" class="btn btn-danger btn-sm px-3 mb-2 material-tooltip-main waves-effect waves-light"
            data-toggle="tooltip" data-placement="top" title="Add to wishlist"><i class="far fa-heart"></i></button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>

<script>
  let first_slide = document.querySelectorAll('#carouselBestSellerControls .carousel-item')[0]
  first_slide.classList.add('active');
</script>